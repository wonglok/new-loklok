.btn {
  @apply inline-block;
  @apply cursor-pointer;
  @apply font-bold py-2 px-4 rounded;
}

.btn-orange {
  @apply bg-orange-500 text-white;
}
.btn:hover {
  @apply bg-orange-700 text-white;
}

.btn:disabled{
  @apply opacity-50 cursor-not-allowed;
}

.btn-outline{
  @apply bg-transparent text-orange-700 font-semibold py-2 px-4 border border-orange-500 rounded;
}
.btn-outline:hover{
  @apply bg-orange-500 text-white border-transparent;
}